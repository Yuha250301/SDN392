<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/index.css" type="text/css">

    <link rel="stylesheet" href="/stylesheets/auth.css">
    
    <title>
        <%=title%>
    </title>
</head>

<body>
    <%- include('header/login.ejs')%>

    <div class="bg-img overlay">
        <div class="container">
            <div class="row">
                <div class="alert-group">
                    <% if(typeof errors!='undefined' ){%>
                        <% errors.forEach(function(error){%>
                            <div class="alert alert-warning alert-dismissible" role="alert">
                                <%= error.msg %>
                            </div>
                            <% }); %>
                                <% } %>
                </div>
                <div class="" >
                        <div class="d-flex justify-content-center form">
                        <form method="post" class="" style="width: 500px; margin-top: 100px">
                            <div class="mb-3">
                                <label class="label">Name</label>
                                <input type="text" class="form-control" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label class="label">Year of birth</label>
                                <input type="number" class="form-control" name="yob" required>
                            </div>
                            <div class="mb-3">
                                <label class="label">Username</label>
                                <input type="text" class="form-control" name="username" required>
                            </div>
                            <div class="mb-3">
                                <label class="label">Password</label>
                                <input type="password" class="form-control" name="password" required
                                    placeholder="">
                            </div>
                            
                            <div class="field is-grouped d-flex justify-content-between align-items-center">
                                <div class="control">
                                    <p class="small fw-bold mt-2 pt-1 mb-0"> Already have an account? Please <a class="link-danger"
                                            href="/auth">Sign in</a>
                                    </p>
                                </div>

                                <div class="control">
                                    <button class="btn btn-warning is-link">Sign Up</button>
                                </div>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>